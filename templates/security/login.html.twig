{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-white" style="background-image: url('/assets/images/details.jpg');">
        <div class="col-md-5 p-lg-5 my-5" >
        <h1 class="display-3 fw-bold">#Login</h1>
        </div>
    </div>
    <section class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-5 col-sm-12">
            <form method="post">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté(e) comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
                {% endif %}
                <div class="card border-dark ">
                    <div class="card-body w-100 align-self-center">
                        <label class="d-flex justify-content-center fs-4 fw-semibold my-3" for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-3" autocomplete="email" required autofocus>
                        <label class="d-flex justify-content-center fs-4 fw-semibold my-3" for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control my-3" autocomplete="current-password" required>

                        <div class="d-flex justify-content-center">
                        <input type="hidden" name="_csrf_token" 
                            value="{{ csrf_token('authenticate') }}"
                        >
                            <button class="btn btn-lg btn-secondary mt-3" type="submit">
                                Me connecter
                            </button>
                        </div>
                    </div>
                    <div class="d-flex justify-content-around my-3">
                        <a class="fw-semibold my-2" href="{{ path('app_register') }}" style="text-decoration: none;">S'inscrire</a>
                        <a class="fw-semibold my-2" href="{{path('forgotten_password')}}" style="text-decoration: none;">Mot de passe oublié</a>
                    </div>
                </div>

                </form>
            </div>
        </div>
    </section>

{% endblock %}
