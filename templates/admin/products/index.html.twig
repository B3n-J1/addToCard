{% extends 'base.html.twig' %}

{% block title %}Administration Produits{% endblock %}

{% block body %}
  <main class="container">
    <section class="mx-2 row justify-content-center">
      <div class="col-12 text-center">
       <h1>Gestion des Produits</h1>
      </div>
      {# {% for message in app.flashes("success") %} #}
        {# 
        <div class="alert alert-success">
          {{message}}
        </div>  
      {% endfor %} #}
      <div class="row justify-content-end">
        <a href="{{ path('admin_products_create')}}" class="my-3 col-2 btn btn-success">Ajouter</a>
      </div>
      <table class="table col-12 justify-center">
        <tr class="table-primary">
          <td>#</td>
          <td>Categorie</td>
          <td>Nom</td>
          <td>Prix</td>
          <td>Stock</td>
          <td></td>
        </tr>
        {% for product in products %}
          
          <tr>
            {# <td style="width:10%">
              <img src="{{asset('images/aliments/legumes/'~ aliment.image)}}" alt="">
            </td> #}
            <td><strong>{{product.id}}</strong></td>
            <td><strong>{{product.categories}}</strong></td>
            <td><strong>{{product.name}}</strong></td>
            <td><strong>{{product.price}}</strong></td>
            <td><strong>{{product.stock}}</strong></td>
            <td class="text-end">
              <a class="btn btn-warning btn-sm" href="{{ path('admin_products_edit' ,{'slug': product.slug} )}}">Modifier</a>
              <button id="deleteModalButton" type="button" data-nom="{{"#{product.name}"}}" data-bs-id="{{ product.slug}}" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">
                Supprimer
              </button>
            </td>
          </tr>
          
        {% endfor %}
      </table>
          <!-- Modal -->
          <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="deleteModalLabel">Suppression Produit</h5>
                  <button type="button" class="btn-close"  data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                  <a href="" class="btn btn-primary">Supprimer</a>
                </div>
              </div>
            </div>
          </div>
    </section>
  </main>
  
{% endblock %}


{% block javascripts %}
	<script>
    document.addEventListener('DOMContentLoaded', function() {
        let supprimer = document.querySelectorAll("#deleteModalButton")
        for(let bouton of supprimer){
        
				bouton.addEventListener("click", function () {
					document.querySelector(".modal-footer a").href = `/admin/products/delete/` + this.dataset.bsId
					document.querySelector(".modal-body").innerText = `Êtes-vous sûr(e) de vouloir supprimer `+ this.dataset.nom + ' ?'
				})
			}

    });
	</script>
{% endblock %}
