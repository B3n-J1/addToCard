{% extends 'base.html.twig' %}

{% block title %}
	Edition Categorie
{% endblock %}



{% block body %}
  <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center" style="background-image: url('/assets/images/main.jpg');">
    <div class="col-md-5 p-lg-5 mx-auto my-5" >
          {% if modification %}
            <h1 class="display-4 font-weight-normal">Modify Category</h1>
          {% else %}
            <h1 class="display-4 font-weight-normal">New Category</h1>
          {% endif %}
    </div>
  </div>
	<div class="container">
    <div class="border-white form-control my-3">
    {{ form_start(form)}}
      <div class="m-3 row g-3">
        <div class="col-md-3 col-sm-6">
            <label class=" fs-5 fw-semibold my-3" for="inputEmail">Catégorie Parente</label>
            {{ form_widget(form.parent, {'attr': {'class': 'form-select', 'placeholder' : 'Categorie Parente'}}) }}
        </div>
        <div class="col-md-3 col-sm-6">
            <label class=" fs-5 fw-semibold my-3" for="inputEmail">Nom de la catégorie</label>
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder' : 'Nom'}}) }}
        </div>
      </div>
      <div class="m-3 row g-3">
        <div class="col-md-3 col-sm-6">
            <label class=" fs-5 fw-semibold my-3" for="inputEmail">Slug de la catégorie</label>
            {{ form_widget(form.slug, {'attr': {'class': 'form-control', 'placeholder' : 'Slug'}}) }}
        </div>
      </div>
      <div class="m-3 row g-3">
        <div class="col-md-3 col-sm-6">
          <label class=" fs-5 fw-semibold my-3" for="inputEmail">Nombres de commandes</label>
          {{ form_widget(form.categoryOrder, {'attr': {'class': 'form-control', 'placeholder' : 'Commandes'}}) }}
        </div>
      </div>
      <div class="text-end">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
      </div>
    {{ form_end(form) }}
    </div>
  </div>
{% endblock %}