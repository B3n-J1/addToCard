{% extends 'base.html.twig' %}

{% block title %}Liste des produits de la catégorie {{ category.name }}{% endblock %}

{% block body %}
    
                <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center" style="background-image: url('/assets/images/main.jpg');">
                    <div class="col-md-5 p-lg-5 mx-auto my-5" >
                        <a href="{{ path('categories_list', {slug: category.parent.slug})}}" style="text-decoration: none;">
                            <h1 class="display-4 font-weight-normal text-secondary">#{{category.name}}</h1>
                        </a>
                    </div>
                </div>
            <div class="row mx-auto">
            {% for product in products %}
                <div class="col-sm-12 col-md-3 mb-3 mx-auto">
                    <article class="card h-100 border-white">
                    <img src="{{ asset('assets/images/defaultCard.jpg')}}" class="card-img-top" alt="...">
                        <div class="card-body text-center">
                            <h2 class="card-title text-light fs-5 fw-bold">{{ category.name }}</h2>
                            <h2 class="card-title  fs-3 fw-bold">{{ product.name }}</h2>
                            <p class="card-text text-danger fw-bold fs-4 text-center">{{ product.price / 100 }} €</p>
                            <a href="{{ path('products_details', {'slug' : product.slug})}}" class="btn btn-dark text-white fw-bold fs-4">Voir les détails</a>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
{% endblock %}