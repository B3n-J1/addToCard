{% extends 'base.html.twig' %}

{% block body %}   
  <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center" style="background-image: url('/assets/images/main.jpg');">
    <div class="col-md-5 p-lg-5 mx-auto my-5" >
      <h1 class="display-4 font-weight-normal">Welcome to AddToCart !</h1>
      <p class="lead font-weight-normal">The place where you buy the products at their fair price. New products coming soon ...</p>
      <a class="btn btn-outline-secondary" href="#">Coming soon</a>
    </div>
  </div> 
  <div class="row my-md-3 pl-md-3">
        {% set status = false %}
        {% for category in categories %}
          {% if category.parent == null %}
            {% if status == false %}
              <div class="bg-dark col-sm-12 col-md-4 mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
                <div class="my-3 py-3">
                  <h2 class="display-5">{{category.name}}</h2>
                </div>
                  <a href="{{ path('categories_list', {slug: category.slug})}}">
                <div class=" box-shadow mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;background-image:url('{{ asset('assets/images/') ~ category.slug ~'.jpg'}}')"></div>
                  </a>
              </div>
              {% set status = true %}
            {% elseif status == true %}
              <div class="bg-light col-sm-12 col-md-4 mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
                <div class="my-3 py-3">
                  <h2 class="display-5">{{category.name}}</h2>
                </div>
                  <a href="{{ path('categories_list', {slug: category.slug})}}">
                <div class=" box-shadow mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;background-image:url('{{ asset('assets/images/') ~ category.slug ~'.jpg'}}')"></div>
                  </a>
              </div>
              {% set status = false %}
            {% endif %}
          {% endif %}
        {% endfor %}
    </div>
{% endblock %}